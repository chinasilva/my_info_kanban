// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // URL is configured in prisma.config.ts for Prisma 7
}



enum InsightType {
  TREND
  CAUSALITY
  CONTRAST
}

// ============ 认证相关 (NextAuth 需要) ============
model User {
  id            String       @id @default(cuid())
  email         String       @unique
  name          String?
  password      String?      // 邮箱密码登录
  image         String?
  emailVerified DateTime?
  
  accounts      Account[]
  sessions      Session[]
  sources       UserSource[]
  signals       UserSignal[]
  
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  
  @@unique([identifier, token])
}

// ============ 数据源相关 ============
model Source {
  id          String   @id @default(cuid())
  name        String   @unique
  type        String   // 'hackernews' | 'github' | 'rss' | ...
  baseUrl     String
  icon        String?
  config      Json?    // RSS 的 feedUrl 等配置
  isBuiltIn   Boolean  @default(false)
  createdById String?  // 创建者用户 ID (内置为 null)
  isActive    Boolean  @default(true)
  lastFetched DateTime?
  
  signals     Signal[]
  subscribers UserSource[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model UserSource {
  id           String   @id @default(cuid())
  userId       String
  sourceId     String
  isEnabled    Boolean  @default(true)
  displayOrder Int      @default(0)
  
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  source Source @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@unique([userId, sourceId])
  @@index([userId])
}

// ============ 信号相关 ============
model Signal {
  id          String   @id @default(uuid())
  title       String
  url         String   @unique
  summary     String?
  score       Int      @default(0)
  sourceId    String
  category    String?
  tags        String[]
  tagsZh      String[]
  aiSummary   String?
  aiSummaryZh String?
  titleTranslated String?
  externalId  String?
  metadata    Json?
  
  source      Source       @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  userStates  UserSignal[]
  insights    Insight[]    // Implicit many-to-many relation
    
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([sourceId])
  @@index([createdAt])
}

model UserSignal {
  id          String    @id @default(cuid())
  userId      String
  signalId    String
  isRead      Boolean   @default(false)
  isFavorited Boolean   @default(false)
  readAt      DateTime?
  
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  signal Signal @relation(fields: [signalId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@unique([userId, signalId])
  @@index([userId])
}

// ============ 洞察相关 ============
model Insight {
  id        String      @id @default(cuid())
  title     String
  titleZh   String
  content   String      // 英文深度分析
  contentZh String      // 中文深度分析
  type      InsightType
  score     Int         @default(0)
  date      DateTime    @default(now()) // 洞察所属日期
  
  signals   Signal[]    // Implicit many-to-many relation
  
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt



  @@index([date])
}

// ============ AI 阅读缓存 ============
model AICache {
  id           String   @id @default(cuid())
  url          String   @unique
  title        String?  // Articles title for history display
  
  // 存储不同模式的结果
  summaryShort String?  // Mode 1: 短总结
  summaryLong  String?  // Mode 2: 长总结
  translation  String?  // Mode 3: 逐字翻译 (完整结果)
  
  // 元数据
  provider     String?  // e.g. "openai", "anthropic"
  model        String?  // e.g. "gpt-4o"
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([url])
}

