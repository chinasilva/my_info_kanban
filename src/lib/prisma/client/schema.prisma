generator client {
  provider = "prisma-client-js"
  output   = "../src/lib/prisma/client"
}

datasource db {
  provider = "sqlite"
}

model Signal {
  id         String   @id @default(uuid())
  title      String
  url        String   @unique
  summary    String?
  score      Int      @default(0)
  source     String // e.g., 'hackernews', 'github'
  category   String? // e.g., 'AI', 'Crypto'
  externalId String? // ID from the original source
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([source])
  @@index([category])
}

model Source {
  id          String    @id @default(cuid())
  name        String    @unique
  baseUrl     String
  icon        String?
  lastFetched DateTime?
  isActive    Boolean   @default(true)
}
